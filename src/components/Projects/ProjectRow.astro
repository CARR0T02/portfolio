---
import Tags from '@components/Tags.astro';
const { data, url } = Astro.props;
---

<tr>
  <th>
    <a href={url} class='link flex'>
      {data.title}
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 20 20'
        fill='currentColor'
        class='icon small lg-hidden'
      >
        <path
          fill-rule='evenodd'
          d='M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z'
          clip-rule='evenodd'></path>
      </svg>
    </a>
  </th>
  <td><a href={url}>{data.year}</a></td>
  <td class='lg-visible'><Tags tags={data.tags} /></td>
  <td class='lg-visible'>
    <a href={url}>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 20 20'
        class='icon small'
      >
        <path
          fill-rule='evenodd'
          d='M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z'
          clip-rule='evenodd'></path>
      </svg>
    </a>
  </td>
</tr>
<style>
  tr:hover a {
    color: var(--clr-link-hover);
  }

  tr:hover svg {
    fill: var(--clr-link-hover);
  }
</style>
