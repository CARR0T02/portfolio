---

<nav id='nav-bar'>
  <div class='container flex'>
    <span class='logo'><a href='/'>LOGO</a></span>
    <button id='toggle-nav' class='lg-hidden'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        height='48'
        viewBox='0 -960 960 960'
        width='48'
        class='icon'
        ><path
          d='M120-240v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z'
        ></path></svg
      >
    </button>
  </div>
  <div class='nav-links'>
    <a class='link nav-link' href='/#about'>About</a>
    <a class='link nav-link' href='/#experience'>Experience</a>
    <a class='link nav-link' href='/#projects'>Projects</a>
    <a class='link nav-link' href='/projects'>Archive</a>
  </div>
  <button id='toggle-theme' class='link clickable lg-visible'
    ><svg
      xmlns='http://www.w3.org/2000/svg'
      height='48'
      viewBox='0 -960 960 960'
      width='48'
      class='icon'
      ><path
        d='M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q8 0 17 .5t23 1.5q-36 32-56 79t-20 99q0 90 63 153t153 63q52 0 99-18.5t79-51.5q1 12 1.5 19.5t.5 14.5q0 150-105 255T480-120Zm0-60q109 0 190-67.5T771-406q-25 11-53.667 16.5Q688.667-384 660-384q-114.689 0-195.345-80.655Q384-545.311 384-660q0-24 5-51.5t18-62.5q-98 27-162.5 109.5T180-480q0 125 87.5 212.5T480-180Zm-4-297Z'
      ></path></svg
    ></button
  >
</nav>
<style>
  nav {
    top: 0;
    width: 100%;
    background-color: var(--bgc-main);
    z-index: 2;
  }

  .logo {
    vertical-align: middle;
    text-align: center;
    align-self: center;
  }

  button {
    padding: 0;
    background: none;
    border: none;
  }
  @media screen and (max-width: 600px) {
    .nav-links.visible {
      display: flex !important;
    }

    nav {
      position: fixed;
      padding-inline: 1.5rem;
    }

    .container {
      width: 100%;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      width: 100%;
      animation: slide-down 400ms ease-in-out alternate;
    }

    .nav-link {
      padding-block: 1rem;
    }

    .nav-link:last-child {
      padding-bottom: 2rem;
    }
    #toggle-nav {
      position: relative;
      margin-left: auto;
      top: 0;
      width: 32px;
    }
  }
  @media screen and (min-width: 600px) {
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: sticky;
      padding: 1.5rem;
      opacity: 0.96;
      font-size: var(--fs-600);
    }
    .nav-links {
      display: flex;
    }

    .nav-link {
      padding-inline: 2vw;
    }

    #toggle-theme {
      width: 32px;
    }
  }
  @media screen and (min-width: 1024px) {
    .nav-link {
      padding-inline: 5vw;
    }
  }
</style>
<script>
  import { toggleColorScheme } from 'src/scripts/colorSchemeHelper';
  import { toggleNav } from 'src/scripts/mobileNavHelper';
  document
    .querySelector('#toggle-theme')
    ?.addEventListener('click', toggleColorScheme);

  if (screen.width < 600) {
    document.querySelector('.nav-links')?.addEventListener('click', (e) => {
      if (e.target instanceof HTMLAnchorElement) {
        toggleNav();
      }
    });

    document.querySelector('#toggle-nav')?.addEventListener('click', toggleNav);
  }
</script>
