---
import Tags from '@components/Tags.astro';
const { mdFile } = Astro.props;
---

<li>
  <a href={mdFile.frontmatter.url}>
    <div class='card link'>
      <span>{mdFile.frontmatter.start} — {mdFile.frontmatter.end}</span>
      <header class='flex'>
        {mdFile.frontmatter.position} · {mdFile.frontmatter.company}
        <svg
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 20 20'
          fill='currentColor'
          class='icon small lg-hidden'
        >
          <path
            fill-rule='evenodd'
            d='M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z'
            clip-rule='evenodd'></path>
        </svg>
      </header>
      <mdFile.Content />
      <Tags tags={mdFile.frontmatter.tags} />
    </div>
  </a>
</li>
<style>
  @media screen and (max-width: 1024px) {
    li {
      border-bottom: 2px solid var(--clr-main-opaque);
    }
  }
</style>
