---
const { mdFile } = Astro.props;
---

<article class='card'>
  <a href={mdFile.url}>
    <h3 class='flex'>
      {mdFile.frontmatter.title}
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 20 20'
        fill='currentColor'
        class='icon small lg-hidden'
      >
        <path
          fill-rule='evenodd'
          d='M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z'
          clip-rule='evenodd'></path>
      </svg>
    </h3>
    <p>{mdFile.frontmatter.description}</p>
    <img src={mdFile.frontmatter.imageSrc} alt='' />
  </a>
</article>
<style>
  article {
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: var(--fs-600);
    margin-block: 0.5rem;
  }

  img {
    border-radius: 4px;
    max-width: 350px;
  }

  @media screen and (max-width: 1024px) {
    article {
      border-bottom: 2px solid var(--clr-main-opaque);
    }
  }
</style>
