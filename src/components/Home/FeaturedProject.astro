---
const { mdFile } = Astro.props;
---

<article class="card">
  <a href={mdFile.url}>
    <h3>{mdFile.frontmatter.title}</h3>
    <p>{mdFile.frontmatter.description}</p>
    <img src={mdFile.frontmatter.imageSrc} alt='' />
  </a>
</article>
<style>
  article {
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: var(--fs-600);
    margin-block: 0.5rem;
  }

  img {
    border-radius: 4px;
    max-width: 350px;
  }

  @media screen and (max-width: 1024px) {
    article  {
      border-bottom: 2px solid var(--clr-main-opaque);
    }
  }
</style>
