---
const { mdFile } = Astro.props;
---

<article class="card">
  <h3>{mdFile.frontmatter.title}</h3>
  <p>{mdFile.frontmatter.description}</p>
  <img src={mdFile.frontmatter.imageSrc} alt='' />
</article>
<style lang='scss'>
  article {
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: var(--fs-600);
    margin-block: 0.5rem;
  }

  img {
    border-radius: 4px;
    max-width: 350px;
  }

  @media screen and (min-width: 600px) {
    article {
      // flex-direction: row;
    }
  }


</style>
