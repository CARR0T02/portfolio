---
const { tags } = Astro.props;
---

<ul class='flex'>
  {
    tags.map((tag: string) => {
      return <li>{tag}</li>;
    })
  }
</ul>
<style>
  ul {
    flex-wrap: wrap;
  }
  li {
    font-size: var(--fs-400);
    color: var(--clr-primary-text);

    background-color: var(--bgc-primary);
    padding: 0.5rem 1.2rem;
    border-radius: 30px;
  }

  @media screen and (min-width: 600px) {
    li {
      font-size: var(--fs-500);
    }
  }
</style>
